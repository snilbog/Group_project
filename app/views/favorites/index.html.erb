<div class="row">
    <div>
        <h1 class="page-title"><%= @current_user.name %>'s Favorites</h1>
    </div>
        <% @favorites.each do |fav| %>
            <div class="fav-list-box description">
                <h3 class="drink-name"> <%= link_to fav.img, fav %> </h3>
                <p class="description"> <%= fav.description %></p>
                <% @comments.each do |com| %>
                    <% if com.drink_id.to_s == fav.id.to_s %>
                        <p><%= com.content %></p>
                    <% end %>
                <% end %>
                <button id="<%= fav.id %>" class="js-delete-btn btn-lg button fav">Delete</button>
                <%= link_to 'Add Comment', new_comment_path(fav), :class => 'btn button fav btn-lg' %>
            </div>
        <% end %>
    </div>
</div>
  
<div class="container"> 
    <p class="copy_tag">Copyright &copy; DRINKMATE</p>  
</div>